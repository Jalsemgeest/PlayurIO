
darkColor = #585858;

body {
	margin:0px;
}

.container {
	width:100%;
	height:100%;
}

nav.nav-top {
	width:100%;
	background-color:darkColor;
	.container {
		width:980px;
		margin:auto;
		height:60px;
		ul {
			padding:0;
			margin:0;
			list-style:none;
			float:right;
			li {
				display:inline-block;
				
				a {
					color:white;
					text-decoration:none;
					display:block;
					width:80px;
					line-height:60px;
					margin:auto;
					text-align:center;
				}
				a:hover {
					background-color:orange;
					color:white;
				}
			}
		}
	}
}