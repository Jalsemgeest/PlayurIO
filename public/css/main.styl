body {
	margin:0px;
	// background-color:darkColor;
}

.container {
	width:100%;
	height:100%;
	position:absolute;
	display:block;
	
	.center-container {
		display:table;
		width:300px;
		height:100%;
		margin:auto;
		
		.center-container-content {
			display:table-cell;
			height:300px;
			vertical-align:middle;
		}
	}
}

.dashboard {
	width:100%;
	height:100%;
	position:absolute;
	
	.video-area {
		display:inline-block;
		float:left;
		width:60%;
		position:relative;
		height:100%;
	}
	
	.menu-area {
		display:inline-block;
		float:left;
		width:40%;
		position:relative;
		height:100%;
	}
}


.video-table {
	display: table;
    width: 300px;
    height: 100%;
    margin: auto;
    
    .video-container {
    	display:table-cell;
    	height:500px;
    	vertical-align:middle;
    }
}

.main_menu {
	width:90%;
	height:100%;
	ul.menu_tabs {
		list-style:none;
		padding:0;
		width:100%;
		margin:0;
		height:50px;
		
		li {
			display:inline-block;
			width:calc(100% / 3);
			height:50px;
			a {
				text-decoration:none;
				color:black;
				line-height:50px;
				text-align:center;
				display:block;
			}
			a.selected {
				background-color:gray;
			}
		}
	}

	.menu_container {
		width:100%;
		height:calc(100% - 50px);
		
		.menu_content {
			height:100%;
			width:100%;
			
			input {
				width:100%;
				height:20px;
			}
			input:focus {
				outline:0;
			}

			.youtubeResults, .playlist {
				
				height:calc(100% - 20px);
				overflow-y:scroll;
				
				ul {
					margin:0;
					list-style:none;
					padding:0;
					li {
						height:100px;
						display:block;
						position:relative;
						margin-bottom:10px;
						.image_box {
							width:30%;
							display:inline-block;
							float:left;
							height:100px;
							img {
								width:100%;
								height:100%;
							}
						}
						.text_box {
							width:70%;
							display:inline-block;
							float:left;
							height:100px;
							position:relative;
							p {
								display: inline-block;
								float: left;
								margin: 0;
								padding:5px;
								width:100%;
							}
							a {
								position: absolute;
							    bottom: 0px;
							    width:100%;
							    left: 0px;
							    text-align: center;
							    color:black;
							    background-color:orange;
							    text-decoration:none;
							}
							a:hover {
								-webkit-transition: 0.25s linear; -moz-transition: 0.25s linear; -o-transition: 0.25s linear; transition: 0.25s linear;
								background-color: rgba(255, 99, 0, 0.8);
							    transform: translate(0px, -0.5px);
							    box-shadow: 1px 4px 3px -2px rgba(0, 0, 0, 0.47);
							    color: black;
							}
							a.upVote {
								width:50%;
								left:0px;
							}
							a.downVote {
								width:50%;
								right:0px;
								left:initial;
							}
						}
					}
				}
			}
		}
	}
}






